{{>head stylesheet="board" title="board"}}

    <body>

    {{>navbar}}

    <div id="dashboard">
        <div class="container">
            <div class="content">
                <a href="/dashboard"><div class="back-arrow button"><i class="fa fa-arrow-left"></i></div></a>
                <h1>{{ board.name }}</h1>
                <p>{{ board.unique_contributors}} unique contributors</p>
                <p>{{ board.latitude}}, {{ board.longitude}}</p>
                <div class="board">
                    {{#each blocks}}
                        <div class="row">
                        {{#each y}}
                            <div class="block" id="{{x}}, {{y}}" style="background-color: {{hex}}">
                                <div class="overlay"></div>
                            </div>
                        {{/each}}
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    </body>

</html>
