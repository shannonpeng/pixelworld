                    strokeColor: 'white',
                    strokeOpacity: 1,
                    strokeWeight: 4,
                    fillColor: '#69BBF3',
                    fillOpacity: 1,
                    map: map,
                    center: pos,
                    zIndex: 99,
                    radius: 4
                  });
                {{#if target_board}}
                {{else}} // not targeting a specific board
                    const default_board_id = "5a6560f6bd7c3ca10baec104";
